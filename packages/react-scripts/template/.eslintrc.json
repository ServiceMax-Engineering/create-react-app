{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": "off",
    "class-methods-use-this": "off",  // flag for possible removal
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "scripts/**/*.js",
          "src/**/*.test.js",
          "src/test/*.js"
        ]
      }
    ],
    "lines-between-class-members": [
      "error",
      "always"
    ],
    "no-mixed-operators": "off",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "sort-keys": [
      "error",
      "asc",
      {
        "caseSensitive": false,
        "natural": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  }
}
